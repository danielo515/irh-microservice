{
  "name": "irh-microservice",
  "version": "0.0.1",
  "description": "Microservice for store management",
  "scripts": {
    "test": "lab -a code -t 100 -v",
    "test-cov-html": "lab -a code -r html -o coverage.html",
    "start": "node lib/start.js",
    "start:dev": "nodemon lib/start.js",
    "build": "cross-var docker build . -t irh-microservice:$npm_package_version -t irh-microservice:latest",
    "docker-push": "cross-var docker push irh-microservice:$npm_package_version",
    "deploy": "npm run build && npm run docker-push"
  },
  "main": "lib/index.js",
  "author": {
    "name": "Danielo Rodr√≠guez Rivero"
  },
  "keywords": [
    "rest,microservice"
  ],
  "private": true,
  "dependencies": {
    "firebase": "^4.5.0",
    "getconfig": "^3.1.0",
    "glue": "^4.2.0",
    "good": "^7.3.0",
    "good-console": "^6.4.0",
    "hapi": "^16.6.2",
    "hapi-swagger": "^7.8.1",
    "hoek": "^5.0.0",
    "inert": "^4.2.1",
    "joi": "^11.1.1",
    "lout": "^10.0.3",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "cross-var": "^1.0.3",
    "eslint": "^4.8.0",
    "eslint-config-hapi": "^10.1.0",
    "eslint-plugin-hapi": "^4.0.0",
    "nodemon": "^1.12.1"
  }
}